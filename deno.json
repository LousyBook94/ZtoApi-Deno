{
  "imports": {
    "gpt-tokenizer": "npm:gpt-tokenizer@^3.0.1",
    "@std/encoding": "jsr:@std/encoding@1",
    "assert": "https://deno.land/std@0.224.0/assert/mod.ts"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "test:unit": "deno test tests/ --allow-net --allow-env --allow-read",
    "check": "deno check main.ts anthropic.ts src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
